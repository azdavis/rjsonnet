{
  "private": true,
  "name": "jsonnet",
  "displayName": "Jsonnet",
  "version": "0.1.0",
  "description": "Jsonnet support",
  "publisher": "azdavis",
  "author": "Ariel Davis <ariel.z.davis@icloud.com>",
  "repository": {
    "url": "https://github.com/azdavis/rjsonnet.git",
    "type": "git"
  },
  "license": "MIT OR Apache-2.0",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Jsonnet",
    "language server"
  ],
  "main": "out/main.js",
  "scripts": {
    "build-debug": "esbuild src/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --target=node18",
    "build-release": "npm run build-debug -- --minify",
    "check": "tsc"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.16.19",
    "@types/vscode": "^1.79.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.19.8",
    "ovsx": "^0.8.2",
    "typescript": "^5.1.6"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.{jsonnet,libsonnet,TEMPLATE}"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Jsonnet",
      "properties": {
        "jsonnet.server.enable": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable the language server."
        },
        "jsonnet.server.path": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to the `jsonnet-ls` executable.\n\nWhen set to the empty string `\"\"` (the default), use the path to the one that's pre-built and bundled with the extension."
        },
        "jsonnet.server.manifest.enable": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Manifest into JSON."
        },
        "jsonnet.server.importDirs.extra": {
          "type": "array",
          "default": [],
          "markdownDescription": "Extra directories in which to search for import paths."
        },
        "jsonnet.server.diagnostics.show": {
          "type": "string",
          "default": "open",
          "enum": [
            "all",
            "open",
            "none"
          ],
          "markdownEnumDescriptions": [
            "Show all diagnostics.",
            "Show diagnostics only on open files.",
            "Show no diagnostics."
          ],
          "markdownDescription": "How to show diagnostics."
        },
        "jsonnet.server.diagnostics.maxPerFile": {
          "type": "number",
          "default": 5,
          "markdownDescription": "Max number of diagnostics to show per file."
        }
      }
    },
    "languages": [
      {
        "id": "jsonnet",
        "extensions": [
          ".jsonnet",
          ".libsonnet",
          ".TEMPLATE"
        ],
        "aliases": [
          "Jsonnet"
        ],
        "configuration": "languages/jsonnet/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jsonnet",
        "scopeName": "source.jsonnet",
        "path": "languages/jsonnet/syntax.json"
      }
    ],
    "snippets": [
      {
        "language": "jsonnet",
        "path": "languages/jsonnet/snippets.json"
      }
    ]
  }
}
